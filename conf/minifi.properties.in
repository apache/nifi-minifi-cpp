# Python processor properties
nifi.python.processor.dir=@MINIFI_PATH_PYTHON_PROCESSORS@
nifi.python.virtualenv.directory=@MINIFI_PATH_PYTHON_VENV@
nifi.python.install.packages.automatically=true
